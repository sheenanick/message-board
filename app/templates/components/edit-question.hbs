{{#if showEditQuestionForm}}
  <form>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=content placeholder=question.content class="form-control"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{textarea rows="3" value=notes placeholder=question.notes class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author placeholder=question.author class="form-control"}}
    </div>
    <button class="btn btn-primary btn-sm" {{action 'editQuestion' question}}>Save</button>
    <button class="btn btn-danger btn-sm" {{action 'cancel'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn btn-warning btn-sm" {{action 'showEditQuestionForm'}}>Edit</button>
  <button class="btn btn-danger btn-sm" {{action 'deleteQuestion' question}}>Delete</button>
{{/if}}
