{{#if showNewAnswerForm}}
  <h4>Answer this question</h4>
  <form>
    <div class="form-group">
      <label for="answer">Answer:</label>
      {{input value=answer class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author class="form-control"}}
    </div>
    <button class="btn btn-secondary" {{action 'saveAnswer'}}>Submit</button>
    <button class="btn btn-danger" {{action 'cancel'}}>Cancel</button>
  </form>
{{else}}
  <button id="answerQuestion" class="btn btn-primary" {{action 'showNewAnswerForm'}}>Answer this question</button>
{{/if}}
