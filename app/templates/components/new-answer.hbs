{{#if showNewAnswerForm}}
  <form>
    <div class="form-group">
      <label for="answer">Answer:</label>
      {{input value=answer}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author}}
    </div>
    <button class="btn btn-secondary" {{action 'saveAnswer'}}>Submit</button>
    <button class="btn btn-danger" {{action 'cancel'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn btn-primary" {{action 'showNewAnswerForm'}}>Answer</button>
{{/if}}
