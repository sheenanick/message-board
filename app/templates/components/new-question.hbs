<h1 class="title">Post a new question</h1>
<form class="well">
  <div class="form-group">
    <label for="question">Question:</label>
    {{input value=question class="form-control"}}
  </div>
  <div class="form-group">
    <label for="notes">Additional Notes:</label>
    {{textarea rows="3" value=notes class="form-control"}}
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author class="form-control"}}
  </div>
  <button class="btn btn-primary btn-center" {{action 'saveQuestion'}}>Submit</button>
</form>
