{{#if showNewQuestionForm}}
  <h4>Post a new question</h4>
  <form>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question class="form-control"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{textarea rows="3" value=notes class="form-control"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author class="form-control"}}
    </div>
    <button class="btn btn-primary" {{action 'saveQuestion'}}>Submit</button>
    <button class="btn btn-danger" {{action 'cancel'}}>Cancel</button>
  </form>
{{else}}
  <button id="addQuestion" class="btn btn-info" {{action 'showNewQuestionForm'}}>+ New Question</button>
{{/if}}
