<div class="question-detail">
  <h4>{{question.content}}</h4>
  <h6>By {{question.author}}</h6>
  <p>{{question.notes}}</p>
  {{edit-question question=question editQuestion='editQuestion' deleteQuestion='deleteQuestion'}}
</div>
{{new-answer question=question saveAnswer='saveAnswer'}}
{{#if question.answers}}
  {{answer-tile answers=question.answers question=question deleteAnswer='deleteAnswer'}}
{{/if}}
